{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Starte Fullstack Server",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "server/index.ts"],
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (Vite/React)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Fullstack Debug (Server + Frontend)",
      "configurations": [
        "Starte Fullstack Server",
        "Debug Frontend (Vite/React)"
      ]
    }
  ]
}